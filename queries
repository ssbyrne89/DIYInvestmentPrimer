SELECT "Company_Ticker", MAX(Jan) AS Jan, SUM(Feb) AS Feb, SUM(Mar) AS Mar,
SUM(Apr) AS Apr, SUM(May) AS May, SUM(Jun) AS Jun, SUM(Jul) AS Jul,
SUM(Aug) AS Aug, SUM(Sep) AS Sep, SUM("Oct") AS "Oct", SUM(Nov) AS Nov, SUM("Dec") AS "Dec"
FROM
(SELECT "Company_Ticker",
CASE
WHEN "month" = 1 THEN "Dividend_amount" ELSE 0 END AS Jan,
CASE
WHEN "month" = 2 THEN "Dividend_amount" ELSE 0 END AS Feb,
CASE
WHEN "month" = 3 THEN "Dividend_amount" ELSE 0 END AS Mar,
CASE
WHEN "month" = 4 THEN "Dividend_amount" ELSE 0 END AS Apr,
CASE
WHEN "month" = 5 THEN "Dividend_amount" ELSE 0 END AS May,
CASE
WHEN "month" = 6 THEN "Dividend_amount" ELSE 0 END AS Jun,
CASE
WHEN "month" = 7 THEN "Dividend_amount" ELSE 0 END AS Jul,
CASE
WHEN "month" = 8 THEN "Dividend_amount" ELSE 0 END AS Aug,
CASE
WHEN "month" = 9 THEN "Dividend_amount" ELSE 0 END AS Sep,
CASE
WHEN "month" = 10 THEN "Dividend_amount" ELSE 0 END AS "Oct",
CASE
WHEN "month" = 11 THEN "Dividend_amount" ELSE 0 END AS Nov,
CASE
WHEN "month" = 12 THEN "Dividend_amount" ELSE 0 END AS "Dec"

FROM(SELECT "month", "Company_Ticker", "Dividend_amount"
	FROM month_summary
	WHERE "year" = 2020 AND "Dividend_amount" != '0.0000'))
GROUP BY "Company_Ticker"


